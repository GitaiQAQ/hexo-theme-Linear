//- Copyright
.copyright
  - var currentDate = new Date()
  - var year = currentDate.getFullYear()
  - var since = config.since || theme.since
  if since
    - year = year == since ? year : since + '-' + year
    - copyright = '&copy;' + year
    
  p
    != copyright
    span.heart
      i.iconfont.icon-heart
    span.author
      != config.author || theme.author
  p.theme
    != "Theme by " 
    
    a(href="//github.com/GitaiQAQ/hexo-theme-plain") 
      != "Plain"

